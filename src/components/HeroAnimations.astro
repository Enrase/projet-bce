<div class="hero-animations">
  <!-- Particules flottantes énergétiques -->
  <div class="floating-particles">
    <div class="particle particle-1"></div>
    <div class="particle particle-2"></div>
    <div class="particle particle-3"></div>
    <div class="particle particle-4"></div>
    <div class="particle particle-5"></div>
    <div class="particle particle-6"></div>
  </div>

  <!-- Cercles d'énergie pulsants -->
  <div class="energy-rings">
    <div class="energy-ring ring-1"></div>
    <div class="energy-ring ring-2"></div>
    <div class="energy-ring ring-3"></div>
  </div>

  <!-- Lignes d'énergie dynamiques -->
  <div class="energy-lines">
    <div class="energy-line line-1"></div>
    <div class="energy-line line-2"></div>
    <div class="energy-line line-3"></div>
  </div>

  <!-- Rayons lumineux -->
  <div class="light-rays">
    <div class="light-ray ray-1"></div>
    <div class="light-ray ray-2"></div>
    <div class="light-ray ray-3"></div>
  </div>
</div>

<style>
  .hero-animations {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }

  /* === PARTICULES FLOTTANTES === */
  .floating-particles {
    position: absolute;
    inset: 0;
  }

  .particle {
    position: absolute;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    opacity: 0;
    animation: floatParticle 8s ease-in-out infinite;
  }

  .particle-1 {
    background: linear-gradient(45deg, #3B82F6, #06B6D4);
    top: 15%;
    left: 5%;
    animation-delay: 0s;
    animation-duration: 6s;
  }

  .particle-2 {
    background: linear-gradient(45deg, #EA580C, #F97316);
    top: 20%;
    right: 8%;
    animation-delay: 1.5s;
    animation-duration: 8s;
  }

  .particle-3 {
    background: linear-gradient(45deg, #8B5CF6, #A855F7);
    bottom: 25%;
    left: 8%;
    animation-delay: 3s;
    animation-duration: 7s;
  }

  .particle-4 {
    background: linear-gradient(45deg, #10B981, #059669);
    top: 85%;
    right: 12%;
    animation-delay: 2s;
    animation-duration: 9s;
  }

  .particle-5 {
    background: linear-gradient(45deg, #F59E0B, #D97706);
    bottom: 10%;
    right: 25%;
    animation-delay: 4s;
    animation-duration: 6.5s;
  }

  .particle-6 {
    background: linear-gradient(45deg, #EC4899, #DB2777);
    top: 90%;
    left: 20%;
    animation-delay: 0.5s;
    animation-duration: 7.5s;
  }

  @keyframes floatParticle {
    0%, 100% { 
      transform: translateY(0) scale(0.5);
      opacity: 0;
    }
    10% {
      opacity: 1;
      transform: scale(1);
    }
    50% { 
      transform: translateY(-30px) scale(1.2);
      opacity: 0.8;
    }
    90% {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* === CERCLES D'ÉNERGIE === */
  .energy-rings {
    position: absolute;
    inset: 0;
  }

  .energy-ring {
    position: absolute;
    border: 2px solid;
    border-radius: 50%;
    opacity: 0;
    animation: pulseRing 4s ease-in-out infinite;
  }

  .ring-1 {
    width: 100px;
    height: 100px;
    top: 10%;
    right: 5%;
    border-color: rgba(59, 130, 246, 0.2);
    animation-delay: 0s;
  }

  .ring-2 {
    width: 120px;
    height: 120px;
    bottom: 15%;
    left: 5%;
    border-color: rgba(234, 88, 12, 0.2);
    animation-delay: 2s;
  }

  .ring-3 {
    width: 60px;
    height: 60px;
    top: 80%;
    right: 15%;
    border-color: rgba(6, 182, 212, 0.2);
    animation-delay: 1s;
  }

  @keyframes pulseRing {
    0%, 100% {
      transform: scale(0.8);
      opacity: 0;
    }
    50% {
      transform: scale(1.2);
      opacity: 1;
    }
  }

  /* === LIGNES D'ÉNERGIE === */
  .energy-lines {
    position: absolute;
    inset: 0;
  }

  .energy-line {
    position: absolute;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.6), transparent);
    animation: moveLine 6s ease-in-out infinite;
  }

  .line-1 {
    width: 200px;
    top: 25%;
    left: -200px;
    animation-delay: 0s;
  }

  .line-2 {
    width: 300px;
    top: 60%;
    right: -300px;
    background: linear-gradient(90deg, transparent, rgba(234, 88, 12, 0.6), transparent);
    animation-delay: 2s;
    animation-direction: reverse;
  }

  .line-3 {
    width: 150px;
    top: 80%;
    left: -150px;
    background: linear-gradient(90deg, transparent, rgba(6, 182, 212, 0.6), transparent);
    animation-delay: 4s;
  }

  @keyframes moveLine {
    0% {
      transform: translateX(0);
      opacity: 0;
    }
    10%, 90% {
      opacity: 1;
    }
    100% {
      transform: translateX(calc(100vw + 200px));
      opacity: 0;
    }
  }

  /* === RAYONS LUMINEUX === */
  .light-rays {
    position: absolute;
    inset: 0;
  }

  .light-ray {
    position: absolute;
    width: 2px;
    height: 100px;
    background: linear-gradient(180deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transform-origin: center bottom;
    animation: rotateRay 8s linear infinite;
  }

  .ray-1 {
    top: 5%;
    left: 15%;
    animation-delay: 0s;
  }

  .ray-2 {
    top: 8%;
    right: 10%;
    animation-delay: 2.5s;
    background: linear-gradient(180deg, transparent, rgba(234, 88, 12, 0.2), transparent);
  }

  .ray-3 {
    bottom: 5%;
    right: 20%;
    animation-delay: 5s;
    background: linear-gradient(180deg, transparent, rgba(59, 130, 246, 0.2), transparent);
  }

  @keyframes rotateRay {
    0%, 100% {
      transform: rotate(0deg) scale(0.5);
      opacity: 0;
    }
    50% {
      transform: rotate(180deg) scale(1);
      opacity: 1;
    }
  }

  /* === RESPONSIVE === */
  @media (max-width: 768px) {
    .particle {
      width: 6px;
      height: 6px;
    }
    
    .energy-ring {
      width: 60px !important;
      height: 60px !important;
    }
    
    .energy-line {
      width: 100px !important;
    }
    
    .light-ray {
      height: 60px;
    }
  }

  /* === ANIMATION D'ENTRÉE GLOBALE === */
  .hero-animations {
    animation: heroEntrance 2s ease-out;
  }

  @keyframes heroEntrance {
    0% {
      opacity: 0;
      transform: scale(0.9);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>
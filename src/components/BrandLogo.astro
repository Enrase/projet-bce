---
export interface Props {
  variant?: 'full' | 'compact' | 'icon';
  size?: 'sm' | 'md' | 'lg' | 'xl';
  theme?: 'light' | 'dark';
}

const { variant = 'full', size = 'md', theme = 'light' } = Astro.props;

const sizeClasses = {
  sm: { logo: 'w-8 h-8', text: 'text-lg', sub: 'text-xs' },
  md: { logo: 'w-12 h-12', text: 'text-2xl', sub: 'text-sm' },
  lg: { logo: 'w-16 h-16', text: 'text-3xl', sub: 'text-base' },
  xl: { logo: 'w-20 h-20', text: 'text-4xl', sub: 'text-lg' }
};
---

<div class="flex items-center space-x-3">
  <!-- Logo iconique BCE -->
  <div class={`${sizeClasses[size].logo} relative`}>
    <div class={`absolute inset-0 ${theme === 'dark' ? 'bg-gradient-to-br from-orange-400 via-orange-500 to-orange-600' : 'bg-gradient-to-br from-orange-500 via-orange-600 to-red-600'} rounded-xl transform rotate-3 shadow-lg`}></div>
    <div class={`absolute inset-0 ${theme === 'dark' ? 'bg-gradient-to-br from-blue-500 via-blue-600 to-cyan-600' : 'bg-gradient-to-br from-blue-600 via-blue-700 to-cyan-700'} rounded-xl flex items-center justify-center shadow-xl`}>
      <span class={`text-white font-black tracking-tighter ${size === 'sm' ? 'text-sm' : size === 'md' ? 'text-lg' : size === 'lg' ? 'text-xl' : 'text-2xl'}`}>
        BCE
      </span>
    </div>
  </div>
  
  {variant !== 'icon' && (
    <div class="flex flex-col">
      <div class={`font-black tracking-tight ${theme === 'dark' ? 'text-white' : 'text-slate-900'} ${sizeClasses[size].text}`}>
        Bordeaux Confort
        <span class={`${theme === 'dark' ? 'text-orange-400' : 'text-orange-600'} ml-2`}>Énergie</span>
      </div>
      {variant === 'full' && (
        <div class={`${theme === 'dark' ? 'text-slate-300' : 'text-slate-600'} font-medium tracking-wide ${sizeClasses[size].sub} -mt-1`}>
          Spécialiste Énergies • Certifié RGE
        </div>
      )}
    </div>
  )}
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap');
  
  div {
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
  }
</style>
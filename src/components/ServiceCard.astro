---
import CorporateIcon from './CorporateIcon.astro';

export interface Props {
  icon: 'air-conditioning' | 'heat-pump' | 'plumbing' | 'electrical' | 'solar';
  title: string;
  description: string;
  offset?: boolean;
}

const { icon, title, description, offset = false } = Astro.props;
---

<div class={`group relative ${offset ? 'lg:mt-12' : ''}`}>
  <div class="bg-white border border-slate-200 rounded-lg p-8 hover:border-orange-300 hover:shadow-xl transition-all duration-300 group">
    <div class="w-14 h-14 bg-gradient-to-br from-blue-600 to-blue-700 group-hover:from-orange-500 group-hover:to-orange-600 rounded-lg flex items-center justify-center mb-6 transition-all duration-300">
      <CorporateIcon name={icon} className="text-white" size="lg" />
    </div>
    <h3 class="text-xl font-semibold text-slate-900 mb-4 tracking-tight">{title}</h3>
    <p class="text-slate-600 leading-relaxed text-sm">
      {description}
    </p>
  </div>
</div>